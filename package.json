{
  "name": "bela_flores_backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "postinstall": "yarn run build && yarn run migrate && yarn run seed",
    "migrate": "knex --knexfile=./dist/knexfile.js migrate:latest",
    "seed": "knex --knexfile=./dist/knexfile.js seed:run",
    "dev": "nodemon src/server.ts",
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "test": "cross-env NODE_ENV=test jest --runInBand ",
    "dev-migrate": "knex --knexfile=./src/knexfile.ts migrate:latest",
    "dev-seed": "knex --knexfile=./src/knexfile.ts seed:run"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "sucrase": "^3.16.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/multer": "^1.4.4",
    "argon2": "^0.27.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "knex": "^0.21.12",
    "multer": "^1.4.2",
    "sqlite3": "^5.0.0"
  }
}
